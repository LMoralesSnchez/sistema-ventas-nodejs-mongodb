<%- include("template/cabecera" , {tituloweb: "Listado de Proveedores"}) %> 

<div class="container">

    <h1>Listado de Proveedores</h1>

    <a class="btn btn-success btn-block my-4" href="/proveedores/agregar-proveedor">Agregar Nuevo Proveedor</a>
   
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">idProveedor</th>
                <th scope="col">Nombre</th>
                <th scope="col">Telefono</th>
                <th scope="col">Direccion</th>
                <th scope="col">Ciudad</th>
                <th scope="col">Accion</th>
              </tr>
            </thead>
            <tbody>
                <% if (arrayProveedores.length > 0) { %>
                    <% arrayProveedores.forEach(proveedor => { %>
              <tr>
                <th scope="row"><%= proveedor.id %> </th>
                <td><%= proveedor.idProveedor %></td>
                <td><%= proveedor.nombre %></td>
                <td><%= proveedor.telefono %></td>
                <td><%= proveedor.direccion %></td>
                <td><%= proveedor.ciudad %></td>  
              </tr>
              <% }) %>
        <% } %>
            </tbody>
          </table>
     
</div>
 
<%- include("template/footer" ) %> 
